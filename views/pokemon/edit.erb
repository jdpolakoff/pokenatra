<h2>Edit Your Pokemon Here</h2>

<form action="/pokemon/<%= @pokemon.id  %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label for="pokemon[name]">Name:</label>
  <input name="pokemon[name]" value=<%= @pokemon.name %>></label>


  <label for="pokemon[poke_type]">Type:</label>
  <input name="pokemon[poke_type]" value=<%= @pokemon.poke_type %>></label>


  <label for="pokemon[cp]">CP:</label>
  <input name="pokemon[cp]" value=<%= @pokemon.cp %>></label>

  <button type="submit" value="Update your Pokemon">Edit your Pokemon here</button>

</form>

<h2> Delete your Pokemon here</h2>
<form action="/pokemon/<%= @pokemon.id %>" method="post">
  <input type="hidden" name="_method" value="delete">

  <label for="pokemon[name]">Name:</label>
  <input name="pokemon[name]" value=<%= @pokemon.name %>></label>

  <input name = <%= @pokemon.name %>
  <input class="button-delete" type="submit" value="Delete!">
</form>
